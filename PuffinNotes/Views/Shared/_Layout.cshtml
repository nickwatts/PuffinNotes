<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
    <script src="//ajax.googleapis.com/ajax/libs/jqueryui/1.10.1/jquery-ui.min.js"></script>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <title>@ViewBag.Title</title>
</head>
<body>
    <div class="page">
        <header>
            <div id="logo">
                <img src="@Url.Content("~/Content/puffin-logo.png")" alt="Puffin Logo" />
            </div>
            <div id="title">
                <h1>Puffin Notes</h1>
            </div>
            <nav>
                <ul id="topmenu">
                    <li>@Html.ActionLink("List Noticeboards", "Index", "NoticeBoard")</li>
                    <li>@Html.ActionLink("Create a Noticeboard", "Create", "NoticeBoard")</li>
                    <li>@Html.ActionLink("List Notes", "Index", "Note")</li>
                    <li>@Html.ActionLink("Create a Note", "Create", "Note")</li>
                </ul>
            </nav>
        </header>
        <section id="main">
            @RenderBody()
        </section>
        <footer>
        </footer>
    </div>
</body>
</html>
